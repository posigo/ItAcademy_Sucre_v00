@using Sucre_Utility
@model IEnumerable<CexM>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Cexs - Index";
    ViewData["DisplayOfEmptyList"] = "The list of metering point locations is empty!";
    ViewData["HeaderTable"] = new Dictionary<string, string>()
    {
       {"Head","List Of Metering Point Locations"},
       {"Controller","Cex"},
       {"Action","Upsert"},
       {"Caption","Add metering point location"}
    };}
}

<div class="container p-3 bg-white">

    @*<div class="row pt-4 m-0 alert alert-primary">
        <div class="col-6 col-sm-4 col-md-6 col-lg-8">
            <h2 class="text-primary">List Of Metering Point Locations</h2>
        </div>
        @if (User.IsInRole(WC.AdminRole))
        {
            <div class="col-6 col-sm-8 col-md-6 col-lg-4 text-end">
                <a asp-controller="Cex" asp-action="Upsert" class="btn btn-primary-custom">
                    Add metering point location
                </a>
            </div>
        }
      </div> *@

    @{await Html.RenderPartialAsync("_DisplayHeaderIndex", ViewData["HeaderTable"]);}

    @if (Model.Count()>0)
    {
        <div class="m-0 p-0 alert alert-light table-responsive">
            <table class="table table-secondary table-bordered table-striped table-hover" style="width: 100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Management</th>
                        <th>Name Cex</th>
                        <th>Area</th>
                        <th>Device</th>
                        <th>Location</th>
                        <th></th>
                    </tr>                
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td width="5%">@obj.Id</td>
                            <td width="15%">@obj.Management</td>
                            <td width="15%">@obj.CexName</td>
                            <td width="15%">@obj.Area</td>
                            <td width="15%">@obj.Device</td>
                            <td width="15%">@obj.Location</td>
                            <td class="text-center">
                                <a asp-controller="Cex" asp-action="Upsert" asp-route-Id="@obj.Id" class="btn btn-primary-custom mx-2">
                                    Edit
                                </a>
                                <a asp-controller="Cex" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
    }   
    else
    {
        @* <div class="row row-cols-auto alert alert-danger" role="alert">
            <p class="text-danger h4">The list of metering point locations is empty!</p>
        </div> *@
        @*<partial name="_DisplayOfEmptyList" view-data="ViewData" />*@
        await Html.RenderPartialAsync("_DisplayOfEmptyList", ViewData["DisplayOfEmptyList"]);
    }
</div>