                        </div>
                        <div class="row form-floating mb-3 py-1">
                            @Html.TextBoxFor(model => model.SourceType,null, new{@class="form-control", @type="number", @id="SourceType", @min="0", @max="2", @readonly="readonly"})
                            @Html.LabelFor(model => model.SourceType, "Channel source type (0 -- device, 1 -- calculated, 2 -- manual)", new{@for="SourceType"})
