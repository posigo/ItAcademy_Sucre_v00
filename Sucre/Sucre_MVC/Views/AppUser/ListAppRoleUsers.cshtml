@model Sucre_Models.AppRoleUsersM
@{    
    Layout = "_Layout";
    ViewData["Title"] = "App role - app users";
}

<div class="container">
    <div class="row pt-4 m-0 alert alert-primary">
        <div class="col-8 col-sm-6 col-md-8 col-lg-10">
            <h5 class="text-primary">Linking app users to a role with Id = <small>@Model.Id: "@Model.Name"</small></h5>
        </div>
        
        <div class="col-4 col-sm-6 col-md-4 col-lg-2 text-end">
            <a asp-controller="AppUser" asp-action="ListAppRole" class="btn btn-primary-custom">
                Back to the list of roles
            </a>
        </div>
    </div>

    <form method="post" asp-action="PointCannalesDelete" enctype="multipart/form-data">
        <input asp-for="Id" hidden />
        <div class="table-responsive m-0 p-0 alert alert-light">
            <table class="table table-secondary table-bordered table-striped border-primary table-hover" style="width: 100%">
                <thead class="">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">GroupId</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody class="">
                    @if (Model.AppUsersM.Count > 0)
                    {
                        for (int i = 0; i<Model.AppUsersM.ToList().Count(); i++) @*   each (var cannale in Model.CannalesM) *@
                        {
                            <tr>
                                <td scope="col" width="30%">@Model.AppUsersM.ToList()[i].Id</td>
                                <td scope="col" width="20%">@Model.AppUsersM.ToList()[i].Name</td>
                                <td scope="col" width="20%">@Model.AppUsersM.ToList()[i].Email</td>
                                <td scope="col" width="20%">@Model.AppUsersM.ToList()[i].GroupNumber</td>
                                <td scope="col">
                                    <input asp-for="@Model.AppUsersM.ToList()[i].Id" hidden />
                                    <input asp-action="ListAppRoleUsersDelete" asp-route-Id="@Model.Id" asp-route-IdAppUser="@Model.AppUsersM.ToList()[i].Id"
                                           type="submit" class="btn btn-danger-custom w-100" value="Delete" />                                    
                                </td>
                                
                            </tr>
                        }
                    }

                    <tr>
                        <td scope="col" colspan="4" width="80%">
                            <select asp-for="AddUser" asp-items="@Model.FreeAppUsersSelectList" class="form-select">
                                <option disabled selected>--Select app user--</option>
                            </select>
                            <span asp-validation-for="AddUser" class="text-danger"></span>
                        </td>
                        <td>                           
                            <input asp-action="ListAppRoleUsersAdding" asp-route-Id="@Model.Id" asp-route-Add="@Model.AddUser"
                                                               type="submit" class="btn btn-success w-100" value="Add" /></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </form>

</div>